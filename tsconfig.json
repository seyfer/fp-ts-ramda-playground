{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "checkJs": false,
        "declaration": true,
        "declarationMap": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importsNotUsedAsValues": "preserve",
        "importHelpers": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "dom",
            "esnext",
            "dom.iterable",
            "scripthost"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "noEmit": false,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2020"
    },
    "exclude": [
        "node_modules",
        "webpack.*"
    ]
}
